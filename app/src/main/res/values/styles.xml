<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTextView">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTextView.Regular" />

    <style name="AppTextView.Regular.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTextView.Regular.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTextView.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextView.Bold.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppEditText" parent="AppTextView.Regular.Small">
        <item name="android:background">@drawable/bg_edit_text_selector</item>
        <item name="android:padding">20dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppButton" parent="AppTextView.Bold.Medium">
        <item name="android:background">@drawable/btn_start_selector</item>
        <item name="android:padding">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
